<!--index.wxml-->
<view class="container">

  <image src='./img/logo.jpg' class='logo'></image>
  <view class='login-container'>
    <input class='phone' placeholder='请输入您的手机号码' maxlength='11' bindblur="getUserPhone"></input>
    <view class='vali-container'>
      <input class='vali-text' placeholder='请输入验证码' maxlength='6' bindblur="getUserVali"></input>
      <button class='vali-btn ' bindtap="getVali" >{{valiText}}</button>
    </view>
    <button class='login-btn' bindtap="tryLogin">登录</button>
  </view>
</view>
