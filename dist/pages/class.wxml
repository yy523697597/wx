
    <view class="class">
        <view class="schedule-container"  wx:for="{{allClass}}" wx:key="index" wx:for-item="classInfo" wx:for-index="monthIndex">
            <view class="month" data-month="{{classInfo.month}}">
                {{classInfo.month}} >
            </view>
            <view class="detail-container" wx:for="{{classInfo.detail}}" wx:for-index="dayIndex">
                <view class="time-container">
                    <view class="day">{{item.day}}</view>
                    <view class="week">{{item.week}}</view>
                </view>
                <view class="class-name-container">
                    <view class="class-name" wx:for="{{item.class}}" wx:for-item="class" style="background-color:{{class.bgColor}}" wx:for-index="classIndex">
                        <view>{{class.noon}} --- {{class.time}}</view>
                        <view>{{class.location}}</view>
                        <view>{{class.className}}</view>
                        <button wx:if="{{class.status !== '已上'}}" class="danger" catchtap="selectClass" data-wpyselectclass-a="{{monthIndex}}" data-wpyselectclass-b="{{dayIndex}}" data-wpyselectclass-c="{{classIndex}}">{{class.leave}}</button>
                    </view>
                </view>
            </view>
        </view>
    </view>